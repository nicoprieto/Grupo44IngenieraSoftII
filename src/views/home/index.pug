extends ./_layout.pug

block container
  for week in weeks
    div.home-residence
      h3= `Residencia ${week.residence.title}`
      p= week.residence.description
      div
        for photo in week.residence.photos
          img(
            src=`/residences/${photo.filename}`
            alt=`Foto residencia ${photo.id}`
          )
      br

      a(
        title="Ver mas informacion.."
        href=`/residences/${week.residence.id}`
      ) Ver mas informacion...
