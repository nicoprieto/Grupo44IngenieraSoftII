doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='Some description')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= `${title}`
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/styles.css')
  body

    if errors
      ul.my-errors
        for error in errors
          li= error.msg

    img(
      src="/images/logo.png"
      alt="Home Switch Home - Logo"
      class="logo-img"
    )

    form(
      action="/admin/login"
      method="POST"
      class="form-registration"
    )
      label(for="name") Name:
      input(
        type="email"
        id="email"
        name="email"
        class="form-control"
      )

      label(for="pass") Email:
      input(
        type="password"
        id="pass"
        name="pass"
        class="form-control"
      )

      input(
        type="submit"
        value="Ingresar"
        class="btn btn-lg btn-primary btn-block"
      )